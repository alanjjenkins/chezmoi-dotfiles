#!/bin/sh
export XSECURELOCK_AUTH_TIMEOUT=2
export XSECURE_SHOW_DATETIME=1
export XSECURELOCK_SHOW_HOSTNAME=0
export XSECURELOCK_SHOW_USERNAME=0
